<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:background="@drawable/back"
    android:orientation="vertical"
    tools:context="tech.geeksquad.recyte.ProfileActivity">

    <TextView
        android:id="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:gravity="center"
        android:text="PROFILE"
        android:textColor="#319"
        android:textSize="20sp" />

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:elevation="12dp"
        android:innerRadius="0dp"
        android:shape="oval"
        android:thicknessRatio="1.9"
        cardview:cardCornerRadius="80dp">

        <ImageView
            android:id="@+id/profile_pic"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:contentDescription="user_profile_picture"
            android:onClick="ChangeProfilePic"
            android:src="@drawable/women" />
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:id="@+id/namecard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:gravity=""
                android:text="NAME : XYZ" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/Place"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:gravity=""
                android:text="PLACE : Delhi,Safdarjung " />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/points"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:gravity=""
                android:text="points : 50" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:gravity=""
                android:text="Things Donated : 5" />
        </android.support.v7.widget.CardView>

    </LinearLayout>


</LinearLayout>
